<link rel="stylesheet" href="/stylesheets/navbar.css" />

<nav class="navbar navbar-dark sticky-top navbar-expand-lg" id="nav_top">
    <div class="container-fluid" style="background: rgba(34, 0, 63, 1);">

         <a class="navbar-brand" href="/">
            <img class="navbar-brand d-inline-block align-text-top" src="/images/white_logo.png" alt="" width="125" height="50">
         </a>

         <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarNavAltMarkup" 
            aria-controls="navbarNavAltMarkup" 
            aria-expanded="false" 
            aria-label="Toggle navigation"
            style=" 
                background:transparent; 
                border-color: white;
                
                "
            >
            <span class="navbar-toggler-icon"></span>
          </button>

         <div class="collapse navbar-collapse hide" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/products">Products</a>
            </div>
         </div>

         <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="input-group">
                <input type="text" class="form-control" name="searchText" placeholder="Search" id="cust-search-bar">
                <a  class="btn btn-outline-secondary" id="search_button">Search</a>
            </div>
         </div>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

            <div class="navbar-nav ms-auto">
                <% if(!currentUser) { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                <% } else { %>
                    <% if(currentUser.isAdmin) { %>
                        <a class="nav-link" href="/adminProfile">Admin Dashboard</a>
                    <% } else { %> 
                        <a class="nav-link" href="/profile">Profile</a>                
                    <% } %> 
                    <a class="nav-link" href="/logout">Logout</a>
                <% } %> 
                <a class="nav-link" href="/cart">
                    <i class="fa-solid fa-cart-shopping fa-lg" aria-hidden="true"></i>
                    <% if(session.cart) {%>
                        <span class="position-absolute translate-middle badge rounded-pill bg-danger">
                            <%= session.cart.totalQty %>
                        </span>
                <% } %>          
                </a>
            </div>
            
        </div>

    </div>
</nav>
