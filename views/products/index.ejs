<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1>All Products</h1>
        <div>
            <a href="/products/new">Add Product</a>
        </div>
        <div class="col-md-2">
            <div class="card-body" style="height: 20rem;">
                <h5 class="card-title"> <i class="fas fa-hockey-puck    "></i>
                </h5>
                <p class="card-text">
                </p>
                <p class="card-text">
                </p>
                <p class="card-text">
                </p>
            </div>
        </div>
        <div class="col-8">
            <% for(let product of products) { %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= product.image %>" class="img-fluid" style="height: 10rem; width: 10rem;" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body" style="height: 20rem;">
                                <h5 class="card-title">
                                    <%= product.title %>
                                </h5>
                                <p class="card-text">
                                    <%= product.description %>
                                </p>
                                <p class="card-text">$
                                    <%= product.price %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">Quantity: <%= product.quantity %></small>
                                </p>
                                <a class="btn btn-primary" href="/products/<%= product._id %> ">View <%= product.title %> </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }%>
        </div>
        <div class="col-md-2">
            test
        </div>
    </div>