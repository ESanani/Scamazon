<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Product</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/products" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="product[title]" required>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div> <!-- end title -->
            <div class="mb-3">
                <label class="form-label" for="price">Product Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input class="form-control" type="text" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="product[price]" required>
                </div>       
            </div> <!-- end price -->
            <div class="mb-3">
                <label class="form-label" for="quantity">Product Quantity</label>
                <input class="form-control" type="text" id="quantity" name="product[quantity]" required>
            </div> <!-- end quantity -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" 
                    name="product[description]" required></textarea>
            </div> <!-- end description -->
            
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="product[image]" required>
            </div> <!-- end image -->
            <div class="mb-3">
                <label class="form-label" for="discount">Discount</label>
                <div class="input-group">           
                    <input class="form-control" type="number" value="0" id="discount" placeholder="0.00" aria-label="discount"
                        aria-describedby="discount-label" name="product[discount]">
                    <span class="input-group-text" id="discount-label">%</span>
                </div> 
            </div> <!-- end discount -->
            <div class="mb-3">
                <button class="btn btn-success">Add Product</button>
            </div> 
        </form>
        <a href="/products">All Products</a>
    </div>  
</div>
